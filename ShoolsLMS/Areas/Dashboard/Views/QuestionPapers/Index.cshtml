@model ShoolsLMS.Areas.Dashboard.ViewModels.PapersListingModel

<div class="row">
    <div class="col col-lg-12">
        <h2>Question Papers <i class="fas fa-file-pdf"></i></h2>
        <hr />
    </div>
</div>
<div class="row  mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchterm" class="form-control" placeholder="Search." value="@Model.SearchTerm" required>
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i>Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "QuestionPapers") "><i class="fas fa-redo mr-1"></i>Reset</a>
                    <a href="@Url.Action("Create","QuestionPapers")" class="data-btn btn btn-outline-success" type="button"><i class="fas fa-plus mr-1"></i>Create</a>
                </div>
            </div>

        </form>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col col-lg-12">
        @{
            Html.RenderPartial("_Listing", Model);
        }
        <hr />
    </div>
</div>
