@model IEnumerable<ShoolsLMS.Models.Data.Subject>
@{
    ViewBag.Title = "Your Subjects";
}
<aside id="colorlib-hero">
    <div class="container">

        <style>
            .card {
                box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
                max-width: 300px;
                margin: auto;
                background-color: gainsboro;
                text-align: center;
                height: 500px !important;
                margin-bottom: 40px !important;
                border: groove !important;
            }

                .card:hover {
                    border-radius: 10px;
                    border-color: darkblue !important;
                }
        </style>
        @if (Model.Count() == 0)
        {
            <h2 class="col-md-6 col-md-offset-3 text-center colorlib-heading animate-box" style="text-align:center; padding-bottom:20px !important">No Subjects Available</h2>
        }
        else
        {
            <h2 class="col-md-6 col-md-offset-3 text-center colorlib-heading animate-box" style="text-align:center; padding-bottom:20px !important">Your Subjects</h2>
            
                <div class="container">
                    <div class="row">
                        @foreach (var item in Model)
                        {

                            <div class="col-md-4 animate-box">
                                <div class="card">
                                    <img class="card-img-top" src="holder.js/100x180/" alt="">
                                    <h2><i class="fas fa-graduation-cap"></i></h2>

                                    <div class="card-body">
                                        <h4 class="card-title"> @Html.DisplayFor(x => item.Grade.GradeName)</h4>
                                        <hr />
                                        <p class="card-text"> @Html.DisplayFor(x => item.SubjectCode)</p>
                                        <p class="card-text"> @Html.DisplayFor(x => item.SubjectName)</p>
                                        <p class="card-text"> @Html.DisplayFor(x => item.StartDate)</p>
                                        <p class="card-text">Educator <br /> @Html.DisplayFor(x => item.User.Email)</p>
                                        <p class="card-text">
                                            <h5>Description  </h5>
                                            @Html.DisplayFor(x => item.Description)
                                        </p>
                                        <p><a class="btn btn-primary btn-book" href="/SubjectDashboard/Details/@item.SubjectId"> Content</a></p>

                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>


                }
            </div>
</aside>
<div id="colorlib-services">
    <div class="container">
        <div class="row">
            <div class="col-md-4 animate-box text-center">
                <div class="services">
                    <span class="icon">
                        <i class="fas fa-user-tie"></i>
                    </span>
                    <h3>Teacher</h3>
                    <p>Your Subject Teachers <i class="fas fa-upload"></i> Subjects and their content.</p>
                </div>
            </div>
            <div class="col-md-4 animate-box text-center">
                <div class="services">
                    <span class="icon">
                        <i class="fas fa-photo-video"></i>
                    </span>
                    <h3>Lessons</h3>
                    <p>Only Available for Authorized and Enrolled Students.</p>
                </div>
            </div>

            <div class="col-md-4 animate-box text-center">
                <div class="services">
                    <span class="icon">
                        <i class="fas fa-question-circle"></i>
                    </span>
                    <h3>Quizzes</h3>
                    <p>Only One attempt currently available per student! in one Quiz.</p>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4 animate-box text-center">
                    <div class="services">
                        <span class="icon">
                            <i class="fas fa-tasks"></i>
                        </span>
                        <h3>Assignments</h3>
                        <p>No formal Assessment submissions only <i class="fas fa-download"></i> or view assessment questions. </p>
                    </div>
                </div>
                <div class="col-md-4 animate-box text-center">
                    <div class="services">
                        <span class="icon">
                            <i class="fas fa-book-reader"></i>
                        </span>
                        <h3>eBooks</h3>
                        <p>Your Teachers <i class="fas fa-upload"></i> the preferred eBooks for the School curriculumn.</p>
                    </div>
                </div>

                <div class="col-md-4 animate-box text-center">
                    <div class="services">
                        <span class="icon">
                            <i class="fas fa-file-pdf"></i>
                        </span>
                        <h3>Question Papers</h3>
                        <p>Your Teachers <i class="fas fa-upload"></i> the neccessary Question Papers according to the School Syllabus.</p>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>

