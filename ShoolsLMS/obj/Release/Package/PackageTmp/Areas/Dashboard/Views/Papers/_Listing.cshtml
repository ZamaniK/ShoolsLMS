@model ShoolsLMS.Areas.Dashboard.ViewModels.PapersListingModel

@if (Model != null && Model.Papers != null && Model.Papers.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Subject</th>
                <th scope="col">Title</th>
                <th scope="col">Date</th>
                <th scope="col">File</th>


                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var subject in Model.Papers)
            {
                <tr>
                    <td>
                        @subject.Subject.SubjectName
                    </td>
                    <td>
                        @subject.Title
                    </td>
                    <td>
                        @subject.Date
                    </td>

                    <td>
                        @subject.FileName
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "Papers", new { ID = subject.PaperId})" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "Papers", new { ID = subject.PaperId})" type="button" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="far fa-trash-alt mr-1"></i>Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}