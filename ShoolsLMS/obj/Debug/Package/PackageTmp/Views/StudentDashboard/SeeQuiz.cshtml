@model IEnumerable<ShoolsLMS.Models.Data.Quiz>
@{
    ViewBag.Title = "Quizzes";
}
<div class="container">
    <div class="row">
        <div class="top-bottom-padding">
            <h2>
                <i class="fas fa-question"></i> @ViewBag.Title
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Quizzes
                </h3>
            </div>
            <table class="table table-bordered table-hover table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.QuizName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Score)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.QuizName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Score)
                        </td>
                        <td>
                            @Html.ActionLink("Start Quiz", "TakeQuiz", new { quiz = item.QuizId }, new { @class = "btn btn-primary btn-sm" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
