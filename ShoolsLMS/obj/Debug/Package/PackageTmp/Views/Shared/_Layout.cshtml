    <link rel="stylesheet" href="~/Content/style.css">

    <!-- Modernizr JS -->
    <script src="~/Scripts/modernizr-2.6.2.min.js"></script>

</head>
<body>


    <nav class="colorlib-nav navbar-inverse" role="navigation" style="background-color:#4e73df;">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>

        <div class="top-menu">
            <div class="container">
                <div class="col-xs-2">
                    <div id="colorlib-logo">
                        <img src="~/Content/eSchool.png" alt="Logo" style="height:80px; width:80px; padding-right:10px;" />

                    </div>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav " style="color:floralwhite;">
                        <li>
                            <a class="navbar-brand" href="@Url.Action("Index","Home")" alt="">

                                <i class="fas fa-school"></i> School
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Index","Users",new { area = "Dashboard" })" alt="">
                                    <i class="fas fa-fw fa-tachometer-alt"></i> Admin Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Index","SubjectGrade")" alt="">
                                    <i class="fas fa-fw fa-graduation-cap"></i> Classes
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Teacher"))
                        {
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Index","TeacherSubjects",new { area = "TeachersDashboard" })" alt="">
                                    <i class="fas fa-fw fa-tachometer-alt"></i> Teacher Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Index","SubjectGrade")" alt="">
                                    <i class="fas fa-fw fa-graduation-cap"></i> Classes
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Learner"))
                        {
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Enroll","StudentDashboard")" alt="">
                                    <i class="fas fa-list"></i> All Subjects
                                </a>
                            </li>
                            <li>
                                <a class="navbar-brand" href="@Url.Action("Subjects","StudentDashboard")" alt="">
                                    <i class="fas fa-user-graduate"></i> My Subjects
                                </a>
                            </li>
                            <li>
                                <a class="navbar-brand" href="@Url.Action("QuizHistory","StudentDashboard")" alt="">
                                    <i class="fas fa-percentage"></i> Quiz Marks
                                </a>
                            </li>
                        }



                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>


    </nav>
    <div id="page">
        @RenderBody()
        <p></p>

        <footer>
            <div class="row" style="background-color:#4e73df; padding-top:5px;">
                <br />
                <div class="container">

                    <div class="well well-sm" style="text-align:center;">
                        &copy; @DateTime.Now.Year ~ School Management System.
                        &hearts;
                    </div>
                </div>

            </div>
        </footer>

    </div>    <div class="colorlib-loader"></div>

    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
