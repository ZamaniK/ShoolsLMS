@model ShoolsLMS.Areas.Dashboard.ViewModels.BookListingModel

@if (Model != null && Model.Books != null && Model.Books.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Subject</th>
                <th scope="col">Book Name</th>
                <th scope="col">Author Name</th>
                <th scope="col">Description</th>
                <th scope="col">Date Released</th>

                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var subject in Model.Books)
            {
                <tr>
                    <td>
                        @subject.Subject.SubjectName
                    </td>
                    <td>
                        @subject.Name
                    </td>
                    <td>
                        @subject.AuthorName
                    </td>
                    <td>
                        @subject.Description
                    </td>
                    
                    <td>
                        @subject.PublishedDate
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "Books", new { ID = subject.BookId})" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "Books", new { ID = subject.BookId})" type="button" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="far fa-trash-alt mr-1"></i>Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning" role="alert">
        Sorry! There are no available records.
    </div>
}