@model ShoolsLMS.Models.Data.Lesson

@{
    var fileSrc = ViewBag.FilePath;

    ViewBag.Title = "Lesson Details";
}

<div class="container">
    <div class="top-bottom-padding">
        <h2>@ViewBag.Title</h2>

        <hr />
    </div>
</div>

<div class="container">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>

        <dt>
            Educator Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            Lesson Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LessonName)
        </dd>
        <dt>
            Watch Lesson
        </dt>
        <dd>
            <a href="@Url.Action("Download", "Lessons", new { FileName = fileSrc })" type="button" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Download</a>

        </dd>
    </dl>
    <p class="container">
        <a href="@Url.Action("Edit", "Lessons", new { ID = Model.LessonId })" type="button" class="data-btn btn btn-primary"><i class="fas fa-pen mr-1"></i> Edit</a>
        
        <a href="@Url.Action("Index", "Lessons")" type="button" class="data-btn btn btn-secondary"><i class="fas fa-list"></i> Back to List</a>

    </p>
</div>

